<% layout('layouts/boilerplate') -%>
   <br><br><br>

    <div class="container col-9 border p-5 mb-5 mt-5 shadow-lg p-3 mb-5 bg-white rounded ">
        <h3 class="mb-3 mg-auto offset-4">Create a new Post</h3>
        <form action="/create_post/<%= user.username %>" method="post" novalidate class="needs-validation form"
            enctype="multipart/form-data">





            <div class="mb-4 row">
                <label for="img" class="col-sm-2 col-form-label">Upload Image </label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" id="img" name="image" required>
                </div>
            </div>

            <div class="mb-4 row">
                <label for="des" class="col-sm-2 col-form-label">Comment </label>
                <div class="col-sm-9">
                    <textarea name="caption" id="comment" class="form-control"
                        placeholder="Type here your review about our product" required></textarea>
                    <div class="invalid-feedback">please enter valid comment</div>
                </div>
            </div>

            <div class="mb-4 row">
                <label for="tag" class="col-sm-2 col-form-label">Tag Product </label>
                <div class="col-sm-9">
                    <input name="tag" id="tag" class="form-control" placeholder="product ID" required type="text">
                    <div class="invalid-feedback">please enter Product Id</div>
                </div>
            </div >
            <div class="mb-4 row">
              <label for="customRange3" class="form-label col-sm-2 col-form-label">Rating</label>

                <fieldset class="starability-slot col-sm-2" id="customRange3">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="col-sm-6"></div>
            </div>
            <div class="button">
                <button class="btn btn-outline" type="submit"
                    style="background-color: rgb(175, 114, 148);">Submit</button>
            </div>
        </form>

    </div>